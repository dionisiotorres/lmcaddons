<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_config_settings_inherited" model="ir.ui.view">
        <field name="name">view.res.config.settings.inherited</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane" >
                        <span class="o_form_label">Odoo Google Vision</span>
                        <div class="text-muted">
                            Please add here google credentials.json file
                        </div>
                        <button name="%(website_vision_snippet.vision_wizard_action)d" string="Upload json file" type="action" class="oe_link" icon="fa-arrow-right" />
                        <!-- <button name="%(website_vision_snippet.vision_wizard_action)d" string="Change Document Template" type="object" class="oe_link" icon="fa-arrow-right"/> -->
                    </div>
                </div>
                
            </xpath>
        </field>
    </record>
</odoo>