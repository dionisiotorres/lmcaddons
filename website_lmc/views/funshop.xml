<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="funshop_lmc" model="ir.ui.view">
            <field name="name">Funshop</field>
            <field name="type">qweb</field>
            <field name="key">website_lmc.funshop_lmc</field>
            <field name="arch" type="xml">
                <t name="FunShop" t-name="website_lmc.funshop_lmc">
                    <t t-call="website.layout">
                        <div id="wrap" class="lcm_fanshop_page">
                            <div class="oe_structure">
                                <section class="parallax pb128 pt256" data-scroll-background-ratio="1" data-name="Cover" style="background-image: none;">
                                    <span class="s_parallax_bg" style="background-image: url('https://danifricker-dag.odoo.com/web/image/1831/background_fanshop.jpg'); background-position: 50% 0px;"></span>
                                </section>
                                <section class="pb64 pt32" data-name="Text block">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <h2 style="text-align: center;padding-bottom: 25px;">
                                                    <font style="font-size: 62px;font-family: 'UniversLTStd-LightCn', sans-serif;color: #817E65;">
                                                        Fun shop
                                                    </font><br />
                                                </h2>
                                                <p style="font-size: 18px;color: #817E65;">
                                                    In our shop you have the opportunity to buy <b>exclusive polo shirts, gilets and caps from the Lenzerheide Motor Classics and thus get a nice souvenir of the highest circuit in the world.</b>
                                                </p>
                                                <b><span>Order / Shipping:</span></b>
                                                <br /> Shipping only in Switzerland under
                                                <a href="mailto:fanshop@lenzerheidemotorclassics.ch">
                                                    fanshop@lenzerheidemotorclassics.ch
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
    <data>
        <data noupdate="1">
            <record id="funshop_page" model="website.page">
                <field name="website_published">True</field>
                <field name="url">/fanshop</field>
                <field name="view_id" ref="funshop_lmc" />
            </record>
        </data>
    </data>
</odoo>